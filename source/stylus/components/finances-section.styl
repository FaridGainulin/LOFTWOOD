.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 100px 0 80px 0
    +above($breakpoints.xxl)
      padding 150px 0 113px 0

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0
      position: absolute
      top: 60px;
      right: 65px;
    +above($breakpoints.md)
      top: 100px;
      right: 104px;
    +above($breakpoints.xxl)
      top: 150px;
      right: 227px;

  &__cards
    +above($breakpoints.sm)
      width 530px
      display: flex
      flex-direction: row
      flex-wrap: wrap
      gap: 10px
      padding-bottom 20px
    +above($breakpoints.md)
      width 560px
      padding-bottom 40px
      gap: 20px
    +above($breakpoints.xxl)
      padding-bottom 70px
      gap: 40px

  &__card
    text-align: center
    width 260px !important
    height: 150px
    padding 20px 10px 20px 10px
    background-color #FBFBFB
    border-radius: 20px
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      width 200px !important
      height: 155px
    +above($breakpoints.md)
      width 260px !important
      height: 190px
    +above($breakpoints.xxl)
      height: 244px
      padding 32px 10px 58px 10px

  &__card-title
    padding 10px 0 10px 0
    +above($breakpoints.md)
      padding 20px 0 10px 0

  &__text
    line-height: 120% !important
    padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 20px 0 47px 0

  &__form
    padding 20px 10px 20px 10px
    background-color #1E1E1E
    border-radius: 20px
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    +above($breakpoints.sm)
      padding 30px 10px 30px 10px
      flex-direction: row
    +above($breakpoints.md)
      padding 40px 10px 40px 10px
      gap: 20px
    +above($breakpoints.xxl)
      padding 61px 10px 75px 10px
      gap: 40px

  &__img
    width 300px
    height: auto
    margin 20px auto 0
    border-radius: 20px !important
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width 300px
      top: 174px
      right: 0
    +above($breakpoints.md)
      width: 405px;
      top: 210px;
    +above($breakpoints.xxl)
      width: 560px;
      top: 270px;

.finances-item
  width 260px !important
  height: 60px !important
  +above($breakpoints.sm)
    width 220px !important
    height: 65px !important
  +above($breakpoints.md)
    width 240px !important
    height: 75px !important
  +above($breakpoints.xxl)
    width 260px !important
    height: 80px !important