.header
  &__container
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between
    color $color-white

  &__title
    display: flex
    flex-direction: row
    align-items: center
    gap: 20px

  &__logo
    width 80px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 161px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      justify-content center
      gap 5px
      border-left: 1px solid #fff
      padding 5px 0 16px 20px

  &__connection
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      gap: 20px
