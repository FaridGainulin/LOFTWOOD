.about-section
  background-color #F2F2F2

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 20px 0
    +above($breakpoints.md)
      padding 80px 0 20px 0
    +above($breakpoints.xxl)
      padding 120px 0 120px 0

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 60px 0

  &__owner-block
    margin 0 auto
    width 233px
    padding 10px 10px 10px 20px
    background-color #000
    border-radius: 20px
    color: #fff
    display: flex
    flex-direction: row
    align-items: center
    gap: 13px
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index 1
      width 190px
      top: 390px;
      left: 0
    +above($breakpoints.md)
      width: 220px;
      top: 416px;
    +above($breakpoints.xxl)
      width 233px
      top: 490px;

  &__owner-block-round
    width 22px
    height: 22px
    border-radius: 50%
    background-color $color-yellow

  &__img
    width 300px
    height: auto
    margin auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 384px;
      bottom: 0
      left: -10px
    +above($breakpoints.md)
      width 400px
      bottom: 0
      left: 0
    +above($breakpoints.xxl)
      width 600px
      bottom: 0
      left: 0

  &__content
    text-align: center
    position relative
    width 100%
    max-width: 660px
    border-radius: 20px
    padding 20px 10px 20px 20px
    background-color #1E1E1E
    color: #fff
    +above($breakpoints.sm)
      margin-left: 305px
      max-width: 420px
      text-align: start
    +above($breakpoints.md)
      margin-left: 325px
      max-width: 640px
      padding 35px 10px 35px 35px
    +above($breakpoints.xxl)
      letter-spacing: -0.5px !important
      margin-left: 498px
      max-width: 660px
      padding 40px 10px 40px 40px

  &__quotes
    position: absolute
    width 24px
    height: 52px
    top: -26px;
    right: 20px;
    +above($breakpoints.sm)
      width 24px
      height: 52px
      top: -26px;
      right: 20px;
    +above($breakpoints.md)
      width 36px
      height: 78px
      top: -40px;
      right: 40px;
    +above($breakpoints.xxl)
      width 72px
      height: 155px
      top: -81px;
      right: 68px;
