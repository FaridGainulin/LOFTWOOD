                input.input.input--color-grey.invest-item(type="text" name="name" autocomplete="off" placeholder="Имя")
                input.input.input--color-grey.invest-item(type="tel" name="phone" autocomplete="off" data-inputmask="'mask': '+7 (999) 999 9999'" placeholder="Телефон")
